{
  "name": "realworld-app",
  "version": "1.0.0",
  "main": "src/main.ts",
  "scripts": {
    "dev": "dojo build -m dev -s -w memory",
    "build": "dojo build",
    "test": "dojo build -m unit && dojo test",
    "test-ci": "dojo build -m unit && dojo test -c \"browserstack\" --usr dylanschiemann2 -k 4Q2g8YAc9qeZzB2hECnS"
  },
  "dependencies": {
    "@dojo/framework": "next",
    "snarkdown": "^1.2.2",
    "tslib": "~1.8.1"
  },
  "devDependencies": {
    "@dojo/cli": "next",
    "@dojo/cli-build-app": "next",
    "@dojo/cli-test-intern": "next",
    "@types/glob": "~5.0.0",
    "@types/grunt": "~0.4.0",
    "@types/marked": "^0.3.0",
    "@types/node": "^6.0.46",
    "@types/sinon": "^1.16.35",
    "sinon": "^2.0.0",
    "tslint": "5.2.0",
    "typescript": "~2.6.1"
  },
  "dojo": {
    "build-app": {
      "build-time-render": {
        "root": "app"
      },
      "pwa": {
        "manifest": {
          "name": "dojo-realworld",
          "short_name": "dojo-realworld",
          "description": "dojo-realworld",
          "background_color": "#ffffff",
          "theme_color": "#222127",
          "icons": [
            {
              "src": "src/logo.png",
              "sizes": [
                128,
                256,
                512
              ]
            }
          ]
        },
        "serviceWorker": {
          "clientsClaim": true,
          "routes": [
            {
              "urlPattern": "https://fonts.googleapis.com/css",
              "strategy": "networkFirst",
              "expiration": {
                "maxEntries": 25
              }
            },
            {
              "urlPattern": "https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css",
              "strategy": "networkFirst",
              "expiration": {
                "maxEntries": 25
              }
            },
            {
              "urlPattern": "https://demo.productionready.io",
              "strategy": "networkFirst",
              "expiration": {
                "maxEntries": 25
              }
            },
            {
              "urlPattern": "https://conduit.productionready.io/api",
              "strategy": "networkFirst",
              "expiration": {
                "maxEntries": 25
              }
            }
          ]
        }
      },
      "legacy": false
    }
  }
}
