{
  "name": "custom-element",
  "version": "1.0.0",
  "scripts": {
    "build-app": "dojo build",
    "build-item": "dojo build --element=src/widgets/createMenuItemElement.ts",
    "build-menu": "dojo build --element=src/widgets/createMenuElement.ts",
    "move-dist": "shx mv dist/* temp-example",
    "build": "shx rm -r temp-example & shx mkdir temp-example && npm run build-app && npm run move-dist && npm run build-menu && npm run move-dist && npm run build-item && npm run move-dist && shx rm -r dist && shx mv temp-example dist"
  },
  "dependencies": {
    "@dojo/core": "~0.3.0",
    "@dojo/has": "~0.1.1",
    "@dojo/i18n": "~0.4.0",
    "@dojo/routing": "~0.4.0",
    "@dojo/shim": "~0.2.3",
    "@dojo/widget-core": "~0.6.0"
  },
  "devDependencies": {
    "@dojo/cli-build-webpack": "~0.4.0",
    "@dojo/cli-test-intern": "~0.3.0",
    "@dojo/interfaces": "~0.2.1",
    "@dojo/loader": "~0.1.1",
    "@dojo/test-extras": "~0.4.0",
    "@types/glob": "~5.0.0",
    "@types/grunt": "~0.4.0",
    "@types/node": "^6.0.46",
    "@types/sinon": "^1.16.35",
    "chai": "^3.5.0",
    "intern": "~3.4.5",
    "shx": "^0.2.2",
    "sinon": "^2.0.0",
    "typescript": "~2.6.1"
  }
}
