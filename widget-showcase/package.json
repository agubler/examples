{
  "name": "dojo2-widget-showcase",
  "version": "1.0.0",
  "main": "src/main.ts",
  "scripts": {
    "build": "dojo build",
    "build:dev": "dojo build -m dev",
    "build:tests": "dojo build -m unit && dojo build -m functional",
    "precommit": "lint-staged",
    "prettier": "prettier --write \"{docs,src,tests}/**/*.{ts,tsx,md}\"",
    "test-ci": "dojo build -m dist && npm run build:tests && dojo test -a -c \"browserstack\" --usr dylanschiemann2 -k 4Q2g8YAc9qeZzB2hECnS",
    "test": "dojo build -m dev && npm run build:tests && dojo test -a"
  },
  "dependencies": {
    "@dojo/framework": "6.0.0-alpha.10",
    "@dojo/themes": "^5.0.0",
    "@dojo/widgets": "6.0.0-alpha.4",
    "cldrjs": "0.5.0",
    "random-name": "^0.1.2",
    "tslib": "~1.9.1"
  },
  "devDependencies": {
    "@dojo/cli-build-app": "6.0.0-alpha.6",
    "@dojo/cli-test-intern": "6.0.0-alpha.1",
    "@types/glob": "~5.0.0",
    "@types/grunt": "~0.4.0",
    "@types/node": "^6.0.46",
    "@types/sinon": "^1.16.32",
    "husky": "~0.14.3",
    "lint-staged": "6.0.0",
    "prettier": "1.18.2",
    "sinon": "^1.17.5",
    "typescript": "~3.4.5"
  },
  "lint-staged": {
    "*.{ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "printWidth": 120,
    "arrowParens": "always"
  }
}
